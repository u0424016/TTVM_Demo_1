<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edward_liao.ttvm_demo_1.FunctionActivity">



        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="168dp"
            android:layout_marginTop="59dp"
            android:id="@+id/linearLayout6"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/button_pay"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setPay"
                android:text="付款"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_deposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setDeposit"
                android:text="存款"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_withdraw"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setWithdraw"
                android:text="提款"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setTransfer"
                android:text="轉帳"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_balance"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setBalance"
                android:text="餘額查詢"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_changepassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setChangepassword"
                android:text="更改密碼"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_logout"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="setLogout"
                android:text="登出"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>