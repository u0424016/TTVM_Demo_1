<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edward_liao.ttvm_demo_1.Pay">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="金額為 TWD 100 元"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button_qrcode"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:onClick="setButton_qrcode"
            android:text="請掃描QRcode" />

        <Button
            android:id="@+id/button_yes"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setButton_yes"
            android:text="確定"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="setButton_cancel"
            android:text="取消"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>